<div class="container-fluid title-wrapper">
  <h1><%= @recipe.name %></h1>
  <p>Here's a few things you can do..</p>
  <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "btn btn-secondary" %>
  <%= link_to "Delete Recipe", recipe_path(@recipe), class: "btn btn-danger", data: {
    confirm: "Are you sure you want to delete: #{@recipe.name}?",
  }, method: :delete %>
</div>
<div class="custom-wrapper">
  <div class="container">
    <div class="recipe-content">
      <h2>Description:</h2>
      <p><%= @recipe.description %></p>
    </div>
  </div>
</div>
