<div class="container">
<div class="title-container">
  <h1>Recipes</h1>
  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-primary" %>
</div>

<div class="recipes">
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to truncate(recipe.name, length: 100), recipe_path(recipe) %></h3>
          <p><%= truncate(recipe.description, length: 450) %></p>
          <p>
            <%= link_to "Edit", edit_recipe_path(recipe), class: "btn
            btn-secondary" %>
            <%= link_to "Delete", recipe_path(recipe), class: "btn btn-danger", data: {
              confirm: "Are you sure you want to delete: #{recipe.name}?",
            }, method: :delete %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
